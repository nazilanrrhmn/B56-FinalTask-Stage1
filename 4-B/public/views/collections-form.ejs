<h2><%= collection ? 'Edit Collection' : 'Add Collection' %></h2>
<form action="<%= collection ? '/collections/edit' : '/collections/new' %>" method="POST">
  <input type="hidden" name="id" value="<%= collection ? collection.id : '' %>">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="<%= collection ? collection.name : '' %>"
      required>
  </div>
  <button type="submit" class="btn btn-primary"><%= collection ? 'Update' : 'Add' %></button>
</form>