<h2>Collections</h2>
<a href="/collections/new" class="btn btn-success mb-3">Add New Collection</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>User</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% collections.forEach(collection => { %>
    <tr>
      <td><%= collection.id %></td>
      <td><%= collection.name %></td>
      <td><%= collection.username %></td>
      <td>
        <a href="/tasks/<%= collection.id %>" class="btn btn-primary btn-sm"
          >View Tasks</a
        >
        <% if (userId === collection.user_id) { %>
        <a
          href="/collections/edit/<%= collection.id %>"
          class="btn btn-warning btn-sm"
          >Edit</a
        >
        <form action="/collections/delete" method="POST" class="d-inline">
          <input type="hidden" name="id" value="<%= collection.id %>" />
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
        <% } %>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
